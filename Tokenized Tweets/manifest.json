{

    "manifest_version": 2,
    "name": "Archive Tweets",
    "version": "1.0",

    "description": "Archive your favorite social media memories as digital collectibles",

    "icons": {
        "48": "icons/icon.png"
    },

    "permissions": [
        "tabs",
        "<all_urls>",
        "storage"   
    ],

    "background": {
        "scripts": ["background.js"]
    },

    "browser_action": {
        "default_title": "Archive Tweets",
        "default_icon": "icons/icon.png",
        "default_popup": "popup/content.html"
    }
}
